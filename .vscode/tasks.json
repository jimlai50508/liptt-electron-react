{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "yarn",
            "type": "shell",
            "group": "none",
            "isBackground": true,
            "command": "yarn",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": [],
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "clear dist(electron)",
            "group": "none",
            "type": "shell",
            "command": "rm -rf dist/main",
            "windows": {
                "command": "if exist \"dist\\main\\\" RD /s /q .\\dist\\main\\"
            },
            "problemMatcher": [],
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "建置(electron production)",
            "group": "none",
            "type": "shell",
            "command": "node_modules/.bin/tsc",
            "windows": {
                "command": "node_modules\\.bin\\tsc.cmd"
            },
            "args": [
                "--project",
                "main",
                "--outDir",
                "dist/main",
                "--sourceMap",
                "false"
            ],
            "dependsOn": ["clear dist(electron)"],
            "problemMatcher": "$tsc",
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "建置(electron development)",
            "group": "build",
            "type": "shell",
            "command": "node_modules/.bin/tsc",
            "windows": {
                "command": "node_modules\\.bin\\tsc.cmd"
            },
            "args": [
                "--project",
                "main",
                "--outDir",
                "dist/main",
                "--sourceMap",
                "true"
            ],
            "dependsOn": ["clear dist(electron)"],
            "problemMatcher": "$tsc",
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "建置(webpack development)",
            "type": "shell",
            "group": "build",
            "command": "yarn",
            "args": ["run", "webpack-development"],
            "dependsOn": ["建置(webpack configuration)"],
            "problemMatcher": [],
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "建置(webpack production)",
            "type": "shell",
            "group": "none",
            "command": "yarn",
            "args": ["run", "webpack-production"],
            "dependsOn": ["建置(webpack configuration)"],
            "problemMatcher": [],
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "監看(webpack development)",
            "type": "shell",
            "isBackground": true,
            "group": "test",
            "command": "yarn",
            "args": ["run", "webpack-watch"],
            "problemMatcher": [],
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "建置(webpack configuration)",
            "type": "shell",
            "group": "none",
            "command": "node_modules/.bin/tsc",
            "windows": {
                "command": "node_modules\\.bin\\tsc.cmd"
            },
            "args": ["--project", ".webpack", "--outDir", ".webpack"],
            "problemMatcher": [],
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "分析(webpack)",
            "type": "shell",
            "group": "test",
            "command": "yarn",
            "args": ["run", "webpack-analyzer"],
            "problemMatcher": [],
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "分析(typescript)",
            "type": "shell",
            "group": "test",
            "command": "node_modules/.bin/tslint --config tslint.json 'main/**/*.ts' 'renderer/**/*.{ts,tsx}' '.webpack/**/*.ts'",
            "windows": {
                "command": "node_modules\\.bin\\tslint.cmd --config tslint.json 'main\\**\\*.ts' 'renderer\\**\\*.{ts,tsx}' '.webpack\\**\\*.ts'"
            },
            "problemMatcher": "$tsc",
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "Release 安裝包(實驗中)",
            "type": "shell",
            "group": "none",
            "command": "electron-builder",
            "linux": {
                "args": ["--linux"]
            },
            "osx": {
                "args": ["--mac"]
            },
            "windows": {
                "args": ["--win"]
            },
            "dependsOn": [
                "建置(webpack production)",
                "建置(electron production)"
            ],
            "problemMatcher": [],
            "presentation": {
                "clear": true
            }
        }
    ]
}
