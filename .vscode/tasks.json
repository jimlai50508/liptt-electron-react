{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "取得相依性套件(nodejs)",
            "group": "build",
            "type": "shell",
            "command": "yarn",
            "args": [
                "install"
            ],
            "problemMatcher": "$eslint-stylish"
        },
        {
            "label": "clear dist(electron)",
            "group": "build",
            "type": "shell",
            "command": "rm -rf dist/main",
            "windows": {
                "command": "if exist \"dist\\main\\\" RD /s /q .\\dist\\main\\"
            },
        },
        {
            "label": "建置(electron prod)",
            "group": "build",
            "type": "shell",
            "command": "node_modules/.bin/tsc",
            "windows": {
                "command": "node_modules\\.bin\\tsc.cmd"
            },
            "args": [
                "--project", "main/",
                "--outDir", "dist/main/",
                "--sourceMap", "false"
            ],
            "dependsOn": [
                "clear dist(electron)"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "建置(electron dev)",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            "command": "node_modules/.bin/tsc",
            "windows": {
                "command": "node_modules\\.bin\\tsc.cmd"
            },
            "args": [
                "--project", "main/",
                "--outDir", "dist/main/",
                "--sourceMap", "true"
            ],
            "dependsOn": [
                "clear dist(electron)"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "建置(webpack development)",
            "type": "shell",
            "group": "build",
            "command": "yarn",
            "args": [
                "run",
                "webpack-development"
            ],
            "dependsOn":[
                "建置(webpack config)",
            ],
            "problemMatcher": "$awesometsc"
        },
        {
            "label": "建置(webpack production)",
            "type": "shell",
            "group": "build",
            "command": "yarn",
            "args": [
                "run",
                "webpack-production"
            ],
            "dependsOn":[
                "建置(webpack config)",
            ],
            "problemMatcher": "$awesometsc"
        },
        {
            "label": "監看(webpack development)",
            "type": "shell",
            "isBackground": true,
            "group": "test",
            "command": "yarn",
            "args": [
                "run",
                "webpack-watch"
            ],
            "problemMatcher": "$awesometsc"
        },
        {
            "label": "建置(webpack config)",
            "type": "shell",
            "group": "build",
            "command": "node_modules/.bin/tsc",
            "windows": {
                "command": "node_modules\\.bin\\tsc.cmd"
            },
            "args": [
                "--project",
                ".webpack/",
                "--outDir",
                ".webpack/"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "監看(webpack config)",
            "type": "shell",
            "group": "build",
            "isBackground": true,
            "command": "node_modules/.bin/tsc",
            "windows": {
                "command": "node_modules\\.bin\\tsc.cmd"
            },
            "args": [
                "--project",
                ".webpack/",
                "--watch",
                "--outDir",
                ".webpack/",
                "--diagnostics",
                "false"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "分析(webpack)",
            "type": "shell",
            "group": "test",
            "command": "yarn",
            "args": [
                "run",
                "webpack-analyzer"
            ],
            "problemMatcher": "$awesometsc"
        },
        {
            "label": "分析(typescript)",
            "type": "shell",
            "group": "test",
            "command": "node_modules/.bin/tslint --config tslint.json 'main/**/*.ts' 'renderer/**/*.{ts,tsx}' '.webpack/**/*.ts'",
            "windows": {
                "command": "node_modules\\.bin\\tslint.cmd --config tslint.json 'main\\**\\*.ts' 'renderer\\**\\*.{ts,tsx}' '.webpack\\**\\*.ts'"
            },
            "problemMatcher": "$tsc"
        },
        {
            "label": "Release 安裝包(實驗中)",
            "type": "shell",
            "group": "build",
            "command": "electron-builder",
            "linux": {
                "args": [
                    "--linux"
                ]
            },
            "osx": {
                "args": [
                    "--mac"
                ]
            },
            "windows": {
                "args": [
                    "--win",
                ]
            },
            "dependsOn": [
                "建置(webpack production)",
                "建置(electron prod)",
            ],
            "problemMatcher": "$eslint-stylish"
        }
    ]
}