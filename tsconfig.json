{
    "extends": "./.config/tsconfig.base",
    "compilerOptions": {
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es6",
        "lib": ["es6", "dom"],
        "types": [
        ],
        "paths": {
            "renderer/*":   ["./renderer/*"],
            "assets/*":     ["./renderer/assets/*"],
            "components/*": ["./renderer/App/components/*"],
            "model":        ["./main/model"],
            "encoding":     ["./main/encoding"],
            "terminal":     ["./main/model/terminal"],
        },
        "baseUrl": "./"
    },
    "compileOnSave": false,
    "include": [
        "renderer/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "renderer/**/*.d.ts",
        "main"
    ]
}