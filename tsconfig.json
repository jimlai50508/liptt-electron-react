{
    "extends": "./.config/tsconfig.base",
    "compilerOptions": {
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es6",
        "lib": [
            "esnext",
            "dom",
        ],
        "types": [
        ],
        "paths": {
            "renderer/*":   ["./renderer/*"],
            "assets/*":     ["./renderer/assets/*"],
            "components/*": ["./renderer/App/components/*"],
            "model":        ["./main/model"],
            "encoding":     ["./main/encoding"],
        },
        "baseUrl": "./"
    },
    "compileOnSave": false,
    "include": [
        "renderer/**/*",
        "main/model/**/*",
        "renderer/**/*.d.ts",
    ],
    "exclude": [
        "node_modules",
        "dist",
        "main",
    ]
}
